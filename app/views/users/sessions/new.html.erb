
<div class="container"> 
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "form-horizontal"}) do |f| %>
			<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"> 
				<div class="panel panel-info" >   
					<div class="panel-heading">
						<div class="panel-title">Sign In</div>
						<div style="float:right; font-size: 80%; position: relative; top:-10px"> 
							<%= link_to "Forgot your password?", new_password_path(resource_name) %>
						</div>
					</div>  
					<div style="padding-top:30px" class="panel-body" >
						<div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i>
							</span>
							<%= f.email_field :email, autofocus: true ,id: "login-username",placeholder:" email",class: "form-control" %>
						</div>

						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
							<%= f.password_field :password, autocomplete: "off",id: "login-password",class: "form-control" ,placeholder: "password"%>
						</div>

						<div class="input-group">
							<% if devise_mapping.rememberable? -%>
								<label>
									Remember me
									<%= f.check_box :remember_me ,id: "login-remember" ,class: "checkbox" %>
								</label>
							<% end -%>
						</div>

						<div style="margin-top:10px" class="form-group">
							<!-- Button -->
							<div class="col-sm-12 controls">
								<%= f.submit "Log in" ,id: "btn-login" ,class: "btn btn-success" %>
								<%= link_to "Login with Github", "/auth/github", id: "btn-fblogin" ,class: "btn btn-primary" %></br>
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-12 control">
								<div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
									Don't have an account!
									<%= link_to "Sign Up Here" , new_user_registration_path%> 

								</div>
							</div>
						</div>    
					</div>
				</div>
			</div> 
	<% end %>
</div>

